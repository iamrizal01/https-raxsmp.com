  <!-- Google Fonts: "Press Start 2P" untuk judul dan "Roboto" untuk teks umum -->
  <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&family=Roboto:wght@400;500&display=swap" rel="stylesheet">
  <style>
    :root {
      --primary-color: #fff;
      --accent-color: #00aced;
    }
    /* Background dengan nuansa ocean (Atlantis) */
    body {
      background: linear-gradient(135deg, #0F2027, #203A43, #2C5364);
      color: var(--primary-color);
      font-family: 'Roboto', sans-serif;
      min-height: 100vh;
      margin: 0;
      padding: 20px;
      overflow-x: hidden;
    }
    /* Loader */
    #loader {
      position: fixed;
      inset: 0;
      background: #000;
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 100;
    }
    .target-animation {
      width: 80px;
      height: 80px;
      border: 4px solid var(--primary-color);
      border-radius: 50%;
      animation: loadAnim 1.8s infinite ease-in-out;
    }
    @keyframes loadAnim {
      0% { transform: scale(0.8); opacity: 0.6; }
      50% { transform: scale(1.2); opacity: 1; }
      100% { transform: scale(0.8); opacity: 0.6; }
    }
    /* Header */
    header {
      text-align: center;
      margin-bottom: 20px;
    }
    header h1 {
      font-family: 'Press Start 2P', monospace;
      font-size: 2.5rem;
      margin-bottom: 10px;
    }
    header p {
      font-size: 1rem;
      margin-bottom: 5px;
    }
    header a {
      color: var(--accent-color);
      text-decoration: none;
    }
    /* Navigation Menu */
    nav {
      margin-bottom: 20px;
      border-bottom: 1px solid #555;
      padding-bottom: 10px;
      text-align: center;
    }
    nav ul {
      list-style: none;
      padding: 0;
      display: inline-flex;
      gap: 15px;
    }
    nav ul li {
      padding: 8px 15px;
      border-radius: 5px;
      cursor: pointer;
      transition: background 0.3s, border-color 0.3s;
    }
    nav ul li:hover {
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid var(--primary-color);
    }
    nav ul li a {
      text-decoration: none;
      color: var(--primary-color);
      font-family: 'Press Start 2P', monospace;
      font-size: 0.9rem;
    }
    /* Section styling (default hidden) */
    .section {
      display: none;
      margin-top: 20px;
    }
    /* Tampilkan section Home secara default */
    #section-home {
      display: block;
    }
